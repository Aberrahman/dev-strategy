<?xml version="1.0" encoding="utf-8"?>
<odoo>

    //Menu item and action window for strategy.firstlevel Model
    <record id="action_strategic_first_level" model="ir.actions.act_window">
        <field name="name">1er Niveau stratégique</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">strategy.firstlevel</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_strategy_first_level"
              name="1er Niveau stratégique"
              parent="menu_strategic_levels"
              action="action_strategic_first_level"
              sequence="1"/>

    //strategy.firstlevel Form view
    <record id="view_strategy_first_level_form" model="ir.ui.view">
        <field name="name">strategy.firstlevel.form</field>
        <field name="model">strategy.firstlevel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name='name' placeholder="1er Niveau stratégique"/>
                    <group>
                        <group>
                            <field name='level_id'/>
                            <field name='strategy_id'/>
                            <field name='managers' widget="many2many_tags"/>
                            <field name='tag_ids' widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name='currency_id'/>
                            <field name='cost'/>
                            <field name='departments' widget="many2many_tags"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    //strategy.firstlevel List view
    <record id="view_strategy_first_level_tree" model="ir.ui.view">
        <field name="name">strategy.firstlevel.tree</field>
        <field name="model">strategy.firstlevel</field>
        <field name="arch" type="xml">
            <tree>
                <field name='level_id'/>
                <field name='strategy_id'/>
                <field name='name'/>
                <field name='managers' widget="many2many_tags"/>
                <field name='departments' widget="many2many_tags"/>
                <field name='cost'/>
                <field name='currency_id' invisible="1"/>

            </tree>
        </field>
    </record>
</odoo>